# Server Configuration
PORT=3003
NODE_ENV=development

# MongoDB Atlas Connection (same as other services)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/keysha?retryWrites=true&w=majority

# JWT Configuration (for verifying tokens)
JWT_SECRET=your_jwt_secret_here_same_as_auth_service
JWT_EXPIRES_IN=1h

# Auth Service URL (to fetch Google OAuth tokens)
AUTH_SERVICE_URL=http://localhost:3001

# Item Service URL (to update items when webhooks arrive)
ITEM_SERVICE_URL=http://localhost:3002

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Webhook URL (for Google Calendar - use ngrok URL in development)
# Example: https://a1b2-c3d4.ngrok-free.app
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok-free.app

# Google OAuth (for calendar API - same as auth-service)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Service Token (for service-to-service authentication)
# This MUST match the SERVICE_TOKEN in auth-service/.env
# Used for webhooks to authenticate with auth-service without user JWT tokens
# Generate with: openssl rand -hex 32
SERVICE_TOKEN=14bbe2c4b252dc544c59b93654e949c874e1134be2474bac218142c12c8ee14e
